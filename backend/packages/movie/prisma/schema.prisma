generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String
  name      String
  birthDate DateTime
  reviewer  Boolean? @default(false)
  password  String
  role      UserRole @default(USER)
  Ticket    Ticket[]
}

model Movie {
  id             String          @id @default(uuid())
  name           String
  description    String
  classification Classification? @default(GENERAL_AUDIENCE)
  duration       Int
  Session        Session[]
}

model SessionSeats {
  id        String   @id @default(uuid())
  line      String
  column    Int
  name      String
  type      SeatType @default(STANDARD)
  state     Boolean  @default(false)
  disable   Boolean  @default(false)
  sessionId String?
  Session   Session? @relation(fields: [sessionId], references: [id])
  Ticket    Ticket[]
}

model Session {
  id           String         @id @default(uuid())
  sessionDate  DateTime       @default(now())
  room         SessionRoom    @default(COMMON)
  movieId      String
  price        Float          @default(25)
  movie        Movie          @relation(fields: [movieId], references: [id])
  SessionSeats SessionSeats[]
  Ticket       Ticket[]
}

model Ticket {
  id             String         @id @default(uuid())
  category       TicketCategory @default(STANDARD)
  paymentStatus  Boolean        @default(false)
  sessionId      String
  userId         String
  sessionSeatsId String
  session        Session        @relation(fields: [sessionId], references: [id])
  seat           SessionSeats   @relation(fields: [sessionSeatsId], references: [id])
  user           User           @relation(fields: [userId], references: [id])
}

enum UserRole {
  ADMINISTRATOR
  USER
}

enum SeatType {
  STANDARD
  WHEELCHAIR
  DOUBLESEAT
}

enum SessionRoom {
  COMMON
  IMAX
  DLUX
  XD
}

enum Classification {
  GENERAL_AUDIENCE
  PARENT_GUIDANCE_SUGGESTED
  RESTRICTED
}

enum TicketCategory {
  FREE
  PROMO
  STANDARD
  HALF_PRICE
}
